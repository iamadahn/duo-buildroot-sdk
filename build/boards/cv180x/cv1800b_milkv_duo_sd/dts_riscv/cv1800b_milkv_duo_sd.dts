/dts-v1/;
#include "cv180x_base_riscv.dtsi"
#include "cv180x_asic_qfn.dtsi"
#include "cv180x_asic_sd.dtsi"
#include "cv180x_default_memmap.dtsi"

&mipi_rx{
	snsr-reset = <&portc 8 GPIO_ACTIVE_LOW>, <&portc 8 GPIO_ACTIVE_LOW>, <&portc 8 GPIO_ACTIVE_LOW>;
};

&spi2 {
	status = "okay";

	/delete-node/ spidev@0;
	ili9486: ili9486@0{
		compatible = "ilitek,ili9486";
		reg = <0>;
		status = "okay";
		spi-max-frequency = <48000000>;
		rotate = <90>;
		fps = <60>;
		buswidth = <8>;
		bpp = <16>;
		write-only;

		dc-gpios = <&porta 15 0>;
		reset-gpios = <&porta 14 1>;

	};
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&i2c1 {
       status = "okay";
       clock-frequency = <100000>;
};

/ {
	model = "Milk-V Duo";
};

